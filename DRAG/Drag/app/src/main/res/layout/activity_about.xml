<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/aboutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project developed by:"
        app:layout_constraintHorizontal_bias="0"
        android:textAppearance="@android:style/TextAppearance.Large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/author_diogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diogo Martins"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/aboutTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/github_logo_diogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/author_diogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:src="@drawable/github"/>


    <TextView
        android:id="@+id/github_diogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://github.com/dfilipemartins"
        android:layout_marginStart="24dp"
        android:layout_marginTop="2dp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintStart_toEndOf="@+id/github_logo_diogo"
        app:layout_constraintTop_toTopOf="@+id/github_logo_diogo" />

    <TextView
        android:id="@+id/author_miguel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miguel Paixão"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/github_diogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/github_logo_miguel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/author_miguel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:src="@drawable/github"/>


    <TextView
        android:id="@+id/github_miguel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://github.com/migvp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="2dp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintStart_toEndOf="@+id/github_logo_miguel"
        app:layout_constraintTop_toTopOf="@+id/github_logo_miguel" />

    <TextView
        android:id="@+id/author_luis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luís Guerra"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/github_miguel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/github_logo_luis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/author_luis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:src="@drawable/github"/>


    <TextView
        android:id="@+id/github_luis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://github.com/luisguerraa"
        android:layout_marginStart="24dp"
        android:layout_marginTop="2dp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintStart_toEndOf="@+id/github_logo_luis"
        app:layout_constraintTop_toTopOf="@+id/github_logo_luis" />


</androidx.constraintlayout.widget.ConstraintLayout>
